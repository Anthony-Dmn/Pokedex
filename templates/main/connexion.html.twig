{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	{# Container du formulaire de connexion  #}
	<div class="container-fluid h-100 login-form-container ">

		<div class="row h-100">

			<div class="col-12 col-lg-8 mx-auto login-form">

				<h1 class="connexion-h1 text-center">Connexion</h1>

				<form action="" method="post" class="d-flex flex-column justify-content-center align-items-center">

					<div class="form-group-connexion text-center col-6">

						<label for="email"></label>
						<input type="email" class="form-control" id="email" name="email" placeholder="Entrer votre adresse e-mail">

					</div>

					<div class="form-group-connexion text-center col-6">

						<label for="password"></label>
						<input type="password" class="form-control" id="password" name="password" placeholder="Entrer votre mot de passe">

					</div>

					<div class="text-center">

						<button class="connexion-button">

							<div class="second-border-connexion">

								<a class="connexion-button-link"><img src="{{ asset('images/PokeBall.png') }}" alt="Poke Ball" width="50px">Se connecter

									<i class="fa-solid fa-chevron-right"></i>

								</a>

							</div>

						</button>

					</div>

				</form>

			</div>

		</div>

	</div>

{% endblock %}
