					{% endif %}

					{% if currentPokemon.type2 == 'dragon' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Dragon.png" alt="Type"></a>
					{% endif %}

					{% if currentPokemon.type2 == 'eau' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Water.png" alt="Type"></a>
