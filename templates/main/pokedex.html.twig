						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Fire.png" alt="Type"></a>
					{% endif %}

					{% if currentPokemon.type2 == 'glace' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Ice.png" alt="Type"></a>
					{% endif %}

					{% if currentPokemon.type2 == 'insecte' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Bug.png" alt="Type"></a>
					{% endif %}

					{% if currentPokemon.type2 == 'normal' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Normal.png" alt="Type"></a>
					{% endif %}

					{% if currentPokemon.type2 == 'plante' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Grass.png" alt="Type"></a>
					{% endif %}

					{% if currentPokemon.type2 == 'poison' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Poison.png" alt="Type"></a>
					{% endif %}

					{% if currentPokemon.type2 == 'psy' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Psychic.png" alt="Type"></a>
					{% endif %}

					{% if currentPokemon.type2 == 'roche' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Rock.png" alt="Type"></a>
					{% endif %}

					{% if currentPokemon.type2 == 'sol' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Ground.png" alt="Type"></a>
					{% endif %}

					{% if currentPokemon.type2 == 'spectre' %}
