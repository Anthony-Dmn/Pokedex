					{% endif %}

					{% if currentPokemon.type == 'vol' %}
						<a href="{{ path('app_types') }}" class="type-img-a"><img class="type-img" src="/images/Types/Flying.png" alt="Type"></a>
					{% endif %}


					{# Image du deuxième type Pokémon  #}

					{% if currentPokemon.type2 == 'combat' %}
